<resources>

    <!-- BASE THEME -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- VERB THEME -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/dark_gray</item>
        <item name="colorAccent">@color/primary_blue</item>
    </style>

    <!-- BUTTON STYLES -->
    <style name="btn" parent="AppTheme">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="textAllCaps">false</item>
        <item name="android:stateListAnimator">@null</item>
    </style>
    <style name="primary_btn" parent="btn">
        <item name="android:backgroundTint">@color/primary_blue</item>
    </style>
    <style name="secondary_btn" parent="btn">
        <item name="android:backgroundTint">@color/primary_green</item>
    </style>
    <style name="tertiary_btn" parent="btn">
        <item name="android:backgroundTint">@color/primary_gray</item>
    </style>

</resources>
